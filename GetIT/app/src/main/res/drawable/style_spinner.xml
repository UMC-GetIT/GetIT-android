<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid
                        android:color="@color/white"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/outline" />
                    <size
                        android:width="100dp"
                        android:height="24dp" />
                    <corners
                        android:radius="5dp"/>
                </shape>
            </item>
            <item
                android:drawable="@drawable/ic_arrow_down_grey"
                android:gravity="center|end"
                android:width="25dp"
                android:height="25dp" />
        </layer-list></item>

</selector>
