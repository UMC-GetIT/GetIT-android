<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GetIT" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/primary_bg</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/normal</item>
        <item name="colorSecondaryVariant">@color/outline</item>
        <item name="colorOnSecondary">@color/background</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->

        <!-- Remove the title bar -->
        <item name="windowNoTitle">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>

        <!-- Status bar icon color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.GetIT.RemoveSplash" parent="Theme.GetIT">
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>