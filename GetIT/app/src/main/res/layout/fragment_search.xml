<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--아이콘 이름 변경 해주시면 받아서 아이콘 변경하기-->

    <ImageButton
        android:id="@+id/laptop_ib"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:scaleType="fitCenter"
        android:background="@color/transparent"
        android:src="@drawable/laptop_icon"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/phone_ib"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/laptop_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="노트북"
        android:textSize="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/laptop_ib"
        app:layout_constraintStart_toStartOf="@id/laptop_ib"
        app:layout_constraintEnd_toEndOf="@id/laptop_ib"/>

    <ImageButton
        android:id="@+id/phone_ib"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:scaleType="fitCenter"
        android:background="@color/transparent"
        android:src="@drawable/phone_icon"
        app:layout_constraintTop_toTopOf="@id/laptop_ib"
        app:layout_constraintStart_toEndOf="@+id/laptop_ib"
        app:layout_constraintEnd_toStartOf="@+id/tablet_ib"/>
    <TextView
        android:id="@+id/phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대폰"
        android:textSize="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/phone_ib"
        app:layout_constraintStart_toStartOf="@id/phone_ib"
        app:layout_constraintEnd_toEndOf="@id/phone_ib"/>

    <ImageButton
        android:id="@+id/tablet_ib"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:scaleType="fitCenter"
        android:background="@color/transparent"
        android:src="@drawable/tablet_icon"
        app:layout_constraintTop_toTopOf="@id/laptop_ib"
        app:layout_constraintStart_toEndOf="@+id/phone_ib"
        app:layout_constraintEnd_toStartOf="@+id/speaker_ib"/>
    <TextView
        android:id="@+id/tablet_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="태블릿"
        android:textSize="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tablet_ib"
        app:layout_constraintStart_toStartOf="@id/tablet_ib"
        app:layout_constraintEnd_toEndOf="@id/tablet_ib"/>

    <ImageButton
        android:id="@+id/speaker_ib"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:scaleType="fitCenter"
        android:background="@color/transparent"
        android:src="@drawable/speaker_icon"
        app:layout_constraintTop_toTopOf="@id/laptop_ib"
        app:layout_constraintStart_toEndOf="@+id/tablet_ib"
        app:layout_constraintEnd_toStartOf="@+id/desktop_ib"/>
    <TextView
        android:id="@+id/speaker_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스피커"
        android:textSize="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/speaker_ib"
        app:layout_constraintStart_toStartOf="@id/speaker_ib"
        app:layout_constraintEnd_toEndOf="@id/speaker_ib"/>

    <ImageButton
        android:id="@+id/desktop_ib"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:background="@color/transparent"
        android:src="@drawable/desktop_icon"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/laptop_ib"
        app:layout_constraintStart_toEndOf="@+id/speaker_ib"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/desktop_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="데스크탑"
        android:textSize="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/desktop_ib"
        app:layout_constraintStart_toStartOf="@id/desktop_ib"
        app:layout_constraintEnd_toEndOf="@id/desktop_ib"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/grey"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/laptop_tv"
        app:layout_constraintStart_toStartOf="parent"/>

