<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 제품 카테고리 -->
    <LinearLayout
        android:id="@+id/search_detail_category_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingBottom="8dp"
        android:elevation="5dp"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/laptop_card_view"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:backgroundTint="@color/primary"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:layout_gravity="center"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/laptop_iv"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_laptop_icon"
                    app:layout_constraintBottom_toTopOf="@+id/laptop_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/laptop_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="@string/laptop"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/laptop_iv"
                    app:layout_constraintStart_toStartOf="@id/laptop_iv"
                    app:layout_constraintTop_toBottomOf="@id/laptop_iv" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/phone_card_view"
            android:layout_width="0dp"
            android:layout_height="85dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/phone_iv"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_phone_icon"
                    app:layout_constraintBottom_toTopOf="@+id/phone_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="@string/phone"
                    android:textColor="@color/normal"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/phone_iv"
                    app:layout_constraintStart_toStartOf="@id/phone_iv"
                    app:layout_constraintTop_toBottomOf="@id/phone_iv" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tablet_card_view"
            android:layout_width="0dp"
            android:layout_height="85dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/tablet_iv"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_tablet_icon"
                    app:layout_constraintBottom_toTopOf="@+id/tablet_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tablet_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="@string/tablet"
                    android:textColor="@color/normal"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/tablet_iv"
                    app:layout_constraintStart_toStartOf="@id/tablet_iv"
                    app:layout_constraintTop_toBottomOf="@id/tablet_iv" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/speaker_card_view"
            android:layout_width="0dp"
            android:layout_height="85dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/speaker_iv"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_speaker_icon"
                    app:layout_constraintBottom_toTopOf="@+id/speaker_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/speaker_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="@string/speaker"
                    android:textColor="@color/normal"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/speaker_iv"
                    app:layout_constraintStart_toStartOf="@id/speaker_iv"
                    app:layout_constraintTop_toBottomOf="@id/speaker_iv" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/desktop_card_view"
            android:layout_width="0dp"
            android:layout_height="85dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/desktop_iv"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_desktop_icon"
                    app:layout_constraintBottom_toTopOf="@+id/desktop_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/desktop_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="@string/desktop"
                    android:textColor="@color/normal"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/desktop_iv"
                    app:layout_constraintStart_toStartOf="@id/desktop_iv"
                    app:layout_constraintTop_toBottomOf="@id/desktop_iv" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- 스크롤 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginBottom="16dp"
                android:background="@color/background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!--  제품 상세 카테고리  -->
            <LinearLayout
                android:id="@+id/search_scrollview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/view"
                app:layout_constraintStart_toStartOf="parent">
                <!--  노트북  -->
                <HorizontalScrollView
                    android:id="@+id/category_search_laptop_scrollview"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:scrollbars="none">
                    <LinearLayout
                        android:id="@+id/search_detail_laptop_category_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_category_laptop_screensize_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="@string/screen_size"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_category_laptop_price_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="@string/price"
                            android:minWidth="0dp"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_category_laptop_brand_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minWidth="0dp"
                            android:text="@string/brand"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_category_laptop_cpu_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minWidth="0dp"
                            android:text="@string/cpu"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_category_laptop_ram_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minWidth="0dp"
                            android:text="@string/ram"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_category_laptop_weight_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minWidth="0dp"
                            android:text="@string/weight"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:background="@drawable/style_detailed_category_button"/>
                    </LinearLayout>
                </HorizontalScrollView>

                <!--  휴대폰  -->
                <HorizontalScrollView
                    android:id="@+id/category_search_phone_scrollview"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:scrollbars="none"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/search_detail_phone_category_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_category_phone_price_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="@string/price"
                            android:minWidth="0dp"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_category_phone_brand_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minWidth="0dp"
                            android:text="@string/brand"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_category_phone_internal_storage_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minWidth="0dp"
                            android:text="@string/storage_capacity"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_category_phone_ram_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minWidth="0dp"
                            android:text="@string/ram"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_category_phone_protocol_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minWidth="0dp"
                            android:text="@string/protocol"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:background="@drawable/style_detailed_category_button"/>
                    </LinearLayout>
                </HorizontalScrollView>

                <!--  태블릿  -->
                <HorizontalScrollView
                    android:id="@+id/category_search_tablet_scrollview"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:scrollbars="none"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/search_detail_tablet_category_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_tablet_category_screensize_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="@string/screen_size"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_tablet_category_price_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="@string/price"
                            android:minWidth="0dp"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_tablet_category_brand_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minWidth="0dp"
                            android:text="@string/brand"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_tablet_category_cpu_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minWidth="0dp"
                            android:text="@string/cpu"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_tablet_category_ram_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minWidth="0dp"
                            android:text="@string/ram"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_tablet_category_storage_capacity_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minWidth="0dp"
                            android:text="@string/storage_capacity"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:background="@drawable/style_detailed_category_button"/>
                    </LinearLayout>

                </HorizontalScrollView>

                <!--  스피커  -->
                <HorizontalScrollView
                    android:id="@+id/category_search_speaker_scrollview"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:scrollbars="none"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/search_detail_speaker_category_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_category_speaker_price_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="@string/price"
                            android:minWidth="0dp"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_category_speaker_brand_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minWidth="0dp"
                            android:text="@string/brand"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_category_speaker_watt_output_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minWidth="0dp"
                            android:text="@string/watt_output"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                    </LinearLayout>
                </HorizontalScrollView>

                <!--  데스크탑  -->
                <HorizontalScrollView
                    android:id="@+id/category_search_desktop_scrollview"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:scrollbars="none"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/search_detail_desktop_category_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_category_desktop_screensize_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="@string/screen_size"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_category_desktop_price_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="@string/price"
                            android:minWidth="0dp"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_category_desktop_brand_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minWidth="0dp"
                            android:text="@string/brand"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_category_desktop_cpu_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minWidth="0dp"
                            android:text="@string/cpu"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_detail_category_desktop_ram_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minWidth="0dp"
                            android:text="@string/ram"
                            android:textColor="@color/normal"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableEnd="@drawable/ic_arrow_down_black"
                            android:drawablePadding="6dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="14dp"
                            android:background="@drawable/style_detailed_category_button"/>

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>


            <!--  검색 버튼  -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/search_btn_constraint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/search_scrollview" >
                <View
                    android:id="@+id/search_btn"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/style_button"
                    android:drawablePadding="-200dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/search_button_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search_icon_blue"
                    android:layout_marginStart="158dp"
                    app:layout_constraintBottom_toBottomOf="@id/search_btn"
                    app:layout_constraintEnd_toStartOf="@+id/search_button_tv"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/search_btn" />

                <TextView
                    android:id="@+id/search_button_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_search"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="158dp"
                    app:layout_constraintBottom_toBottomOf="@id/search_button_iv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/search_button_iv"
                    app:layout_constraintTop_toTopOf="@id/search_button_iv" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--  상품 리스트  -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_product_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fillViewport="true"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/search_btn_constraint"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                app:spanCount="2"
                android:fillViewport="true"
                tools:listitem="@layout/item_search" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
