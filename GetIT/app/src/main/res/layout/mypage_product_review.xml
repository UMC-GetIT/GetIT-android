<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="28dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_product_review_product_img_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_review_img_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/legion_labtop_img" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="텍스트 이름"
        android:textSize="12sp"
        android:textColor="@color/normal"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_product_review_product_img_iv"/>

    <TextView
        android:id="@+id/item_review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:text="리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용"
        android:textSize="12sp"
        android:textColor="@color/normal"
        android:background="@drawable/style_speech_bubble"
        app:layout_constraintLeft_toRightOf="@id/item_product_review_product_img_iv"
        app:layout_constraintTop_toBottomOf="@id/item_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>