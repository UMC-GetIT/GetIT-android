<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialog_screensize_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="화면 크기"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/dialog_screensize_close_ib"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:scaleType="center"
        android:src="@drawable/close_icon"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/dialog_screensize_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/dialog_screensize_title_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_screensize_title_tv">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_screensize_13inches_btn"
            android:layout_width="74dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/style_detailed_category_button"
            android:text="13인치"
            android:textColor="@color/subText"
            app:layout_constraintEnd_toStartOf="@id/dialog_screensize_15inches_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_screensize_15inches_btn"
            android:layout_width="74dp"
            android:layout_height="36dp"
            android:background="@drawable/style_detailed_category_button"
            android:text="15인치"
            android:textColor="@color/subText"
            app:layout_constraintEnd_toStartOf="@id/dialog_screensize_17inches_btn"
            app:layout_constraintStart_toEndOf="@+id/dialog_screensize_13inches_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_screensize_17inches_btn"
            android:layout_width="74dp"
            android:layout_height="36dp"
            android:background="@drawable/style_detailed_category_button"
            android:text="17인치"
            android:textColor="@color/subText"
            app:layout_constraintEnd_toStartOf="@id/dialog_screensize_ect_btn"
            app:layout_constraintStart_toEndOf="@+id/dialog_screensize_15inches_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_screensize_ect_btn"
            android:layout_width="74dp"
            android:layout_height="36dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/style_detailed_category_button"
            android:text="기타"
            android:textColor="@color/subText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dialog_screensize_17inches_btn"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>