<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/dialog_screensize_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="화면 크기"
            android:textColor="@color/normal"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageButton
            android:id="@+id/dialog_screensize_close_ib"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:scaleType="center"
            android:src="@drawable/close_icon"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@id/dialog_screensize_title_tv"
            app:layout_constraintBottom_toBottomOf="@id/dialog_screensize_title_tv"
            app:layout_constraintEnd_toEndOf="parent"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_screensize_13inches_btn"
            android:layout_width="74dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/style_detailed_category_button"
            android:text="13인치"
            android:textColor="@color/subText"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/dialog_screensize_title_tv"
            app:layout_constraintEnd_toStartOf="@id/dialog_screensize_15inches_btn"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_screensize_15inches_btn"
            android:layout_width="74dp"
            android:layout_height="36dp"
            android:background="@drawable/style_detailed_category_button"
            android:text="15인치"
            android:textColor="@color/subText"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintTop_toTopOf="@id/dialog_screensize_13inches_btn"
            app:layout_constraintEnd_toStartOf="@id/dialog_screensize_17inches_btn"
            app:layout_constraintStart_toEndOf="@+id/dialog_screensize_13inches_btn"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_screensize_17inches_btn"
            android:layout_width="74dp"
            android:layout_height="36dp"
            android:background="@drawable/style_detailed_category_button"
            android:text="17인치"
            android:textColor="@color/subText"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintTop_toTopOf="@id/dialog_screensize_13inches_btn"
            app:layout_constraintEnd_toStartOf="@id/dialog_screensize_ect_btn"
            app:layout_constraintStart_toEndOf="@+id/dialog_screensize_15inches_btn"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_screensize_ect_btn"
            android:layout_width="74dp"
            android:layout_height="36dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="400dp"
            android:background="@drawable/style_detailed_category_button"
            android:text="기타"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/subText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/dialog_screensize_13inches_btn"
            app:layout_constraintStart_toEndOf="@+id/dialog_screensize_17inches_btn"/>

        <Button
            android:id="@+id/dialog_screensize_apply_btn"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_screensize_13inches_btn"
            android:text="적용"
            android:textColor="@color/outline"
            android:backgroundTint="@color/background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
