<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:id="@+id/review_name_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@color/white"
        android:text="텍스트 이름"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:textSize="14dp"
        android:fontFamily="@font/notosanskr_bold"
        android:textColor="@color/normal"/>

    <ImageButton
        android:id="@+id/review_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_delete_review"
        android:backgroundTint="@color/white"

        />
</LinearLayout>

    <kr.co.prnd.readmore.ReadMoreTextView
        android:id="@+id/item_review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:text="리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용 리뷰 내용"
        android:textSize="12dp"
        android:textColor="@color/normal"
        app:readMoreColor="@color/normal"
        app:readMoreMaxLine="2"
        app:readMoreText="...더보기"
        android:background="@drawable/style_speech_bubble"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_name_linear"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/outline"
        app:layout_constraintTop_toBottomOf="@id/item_review"
        android:layout_marginTop="28dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>


