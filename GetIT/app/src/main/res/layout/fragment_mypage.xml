<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.mypage.MypageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toRightOf="@id/textname"
                android:src="@drawable/man1" />

            <TextView
            android:id="@+id/textname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일 : Jennifer@gmail.com"
            app:layout_constraintLeft_toRightOf="@id/imageView"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/textID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imageView"
            android:text="닉네임 : Jennifer"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textname"
            />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textlike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="좋아요 누른 상품"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line1" />

        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="더보기"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toLeftOf="@id/imageButton"
            app:layout_constraintTop_toBottomOf="@id/line1"
            />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/mypage_arrow_forward"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line1" />

            <ImageView
                android:id="@+id/imagelike1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/samsong_labtop_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textlike" />

            <ImageView
                android:id="@+id/imagelike2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/lg_labtop_img"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textlike" />


            <ImageView
                android:id="@+id/imagelike3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/lg_gram_labtop_img"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/imagelike2"
                app:layout_constraintTop_toBottomOf="@id/textlike" />

            <TextView
            android:id="@+id/contentname1"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="상품명 : 삼성전자 2021 갤럭시북 프로 360 13.3"
            app:layout_constraintTop_toBottomOf="@id/imagelike1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="@id/imagelike1"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/contentprice1"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="가격 : 500,000원"
            app:layout_constraintTop_toBottomOf="@id/contentname1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="@id/imagelike1"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/contentname2"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:text="상품명 : LG전자 2022"
            app:layout_constraintLeft_toLeftOf="@id/imagelike2"
            app:layout_constraintTop_toBottomOf="@id/imagelike2" />

        <TextView
            android:id="@+id/contentprice2"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:text="가격 : 100,000원"
            app:layout_constraintLeft_toLeftOf="@id/imagelike2"
            app:layout_constraintTop_toBottomOf="@id/contentname2" />

        <TextView
            android:id="@+id/contentname3"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:text="상품명 : LG전자 2022"
            app:layout_constraintLeft_toLeftOf="@id/imagelike3"
            app:layout_constraintTop_toBottomOf="@id/imagelike3" />

        <TextView
            android:id="@+id/contentprice3"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:text="가격 : 100,000원"
            app:layout_constraintLeft_toLeftOf="@id/imagelike3"
            app:layout_constraintTop_toBottomOf="@id/contentname3" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/contentprice1" />

        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="작성한 리뷰"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line2" />


        <TextView
            android:id="@+id/more2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="더보기"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toLeftOf="@id/reviewimageButton"
            app:layout_constraintTop_toBottomOf="@id/line2"
            />

        <ImageButton
            android:id="@+id/reviewimageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/mypage_arrow_forward"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line2" />


            <ImageView
                android:id="@+id/reviewimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/macbook"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/review" />
        <TextView
            android:id="@+id/reviewname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:text="상품명 : Apple 2021 맥북프로 14"
            app:layout_constraintLeft_toRightOf="@id/reviewimage"
            app:layout_constraintTop_toBottomOf="@+id/review" />

        <TextView
            android:id="@+id/reviewcontent"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="역대급 성능입니다! 웬만한 작업으로는 팬도 안 돌아가서 소음도 느껴지지 않네요. 강추합니다!"
            app:layout_constraintLeft_toRightOf="@id/reviewimage"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toBottomOf="@+id/reviewname"/>

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/reviewimage" />

        <!--스크롤 올리기 위해 임의로 설정-->
        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="100dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/line3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>