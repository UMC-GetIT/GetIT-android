<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.mypage.MypageFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp">



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toRightOf="@id/textname"
            android:src="@drawable/mypage_person"
            />

        <TextView
            android:id="@+id/textname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름  : getIT"
            app:layout_constraintLeft_toRightOf="@id/imageView"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/textID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imageView"
            android:text="아이디 : GETIT@naver.com"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textname"
            />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textlike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="좋아요 누른 상품"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line1" />

        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="더보기"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toLeftOf="@id/imageButton"
            app:layout_constraintTop_toBottomOf="@id/line1"
            />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/mypage_arrow_forward"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line1" />

        <ImageView
            android:id="@+id/imagelike1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/lg_labtop_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textlike" />

        <ImageView
            android:id="@+id/imagelike2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/macbook"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textlike" />


        <ImageView
            android:id="@+id/imagelike3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/samsong_labtop_img"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imagelike2"
            app:layout_constraintTop_toBottomOf="@id/textlike" />

        <TextView
            android:id="@+id/contentname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품명"
            app:layout_constraintTop_toBottomOf="@id/imagelike1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"


            />

        <TextView
            android:id="@+id/contentprice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가격 : 2000 "
            app:layout_constraintTop_toBottomOf="@id/contentname1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/contentname2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="상품명 : "
            app:layout_constraintRight_toLeftOf="@id/contentname3"
            app:layout_constraintLeft_toRightOf="@id/contentname1"
            app:layout_constraintTop_toBottomOf="@id/imagelike2" />

        <TextView
            android:id="@+id/contentprice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text=""
            app:layout_constraintRight_toLeftOf="@id/contentprice3"
            app:layout_constraintLeft_toRightOf="@id/contentprice1"
            app:layout_constraintTop_toBottomOf="@id/contentname2" />

        <TextView
            android:id="@+id/contentname3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="상품명"
            app:layout_constraintLeft_toRightOf="@id/contentname2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imagelike3" />

        <TextView
            android:id="@+id/contentprice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="가격"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/contentprice2"
            app:layout_constraintTop_toBottomOf="@id/contentname3" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/contentprice1" />

        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="작성한 리뷰"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line2" />


        <TextView
            android:id="@+id/more2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="더보기"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toLeftOf="@id/reviewimageButton"
            app:layout_constraintTop_toBottomOf="@id/line2"
            />

        <ImageButton
            android:id="@+id/reviewimageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/mypage_arrow_forward"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line2" />


        <ImageView
            android:id="@+id/reviewimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/samsong_labtop_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/review" />

        <TextView
            android:id="@+id/reviewname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품명 : 삼성 노트북 zenbook"
            app:layout_constraintLeft_toRightOf="@id/reviewimage"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toBottomOf="@+id/review"
            />

        <TextView
            android:id="@+id/reviewcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰내용 : 너무 좋아요! "
            app:layout_constraintLeft_toRightOf="@id/reviewimage"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toBottomOf="@+id/reviewname"/>

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/reviewimage" />

        <!--스크롤 올리기 위해 임의로 설정-->
        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="100dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/line3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
