<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.getit.getit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--android:name="com.getit.getit.ApplicationClass"-->
    <application
        android:name="com.getit.getit.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.GetIT.RemoveSplash">

        <activity android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.GetIT.RemoveSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.login.LoginActivity"/>
        <activity android:name=".ui.main.home.WindowActivity"/>
        <activity android:name=".ui.login.SignUpActivity"/>

        <activity android:name=".ui.main.MainActivity"/>

        <activity android:name=".ui.main.search.ProductDetailActivity"/>
        <activity android:name=".ui.main.SearchActivity"/>
        <activity android:name=".ui.main.mypage.settings.ChangePrivacyActivity"/>
        <activity android:name=".ui.main.mypage.settings.settingActivity"/>
        <activity android:name=".ui.main.mypage.settings.ChangeProfileActivity"/>
        <activity android:name=".ui.main.mypage.settings.DeveloperInfoActivity"/>
    </application>

</manifest>
